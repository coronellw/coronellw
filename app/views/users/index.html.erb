<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th><label>Name</label></th>
      <th><label>Email</label></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <%= 
            if current_user?(user)
              link_to 'Edit', edit_user_path(user)
            end 
          %>
          
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

